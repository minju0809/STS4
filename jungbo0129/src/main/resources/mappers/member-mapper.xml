<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.springboot.jungbo0129.member.MemberDao">
	
	<select id="memberList"
		parameterType="com.springboot.jungbo0129.member.MemberVO"
		resultType="com.springboot.jungbo0129.member.MemberVO">

		select * from member_tbl_02 order by custno desc
	</select>

	<select id="custno"
		parameterType="com.springboot.jungbo0129.member.MemberVO"
		resultType="int">

		select max(custno) + 1 from member_tbl_02 
	</select>

	<select id="memberAdd"
		parameterType="com.springboot.jungbo0129.member.MemberVO"
		resultType="com.springboot.jungbo0129.member.MemberVO">

		select max(custno) + 1 as custno, joindate from member_tbl_02 
	</select>

  <insert id="memberInsert"
		parameterType="com.springboot.jungbo0129.member.MemberVO">

		insert into member_tbl_02 (custno, custname, phone, address, joindate, grade, city) 
    values (#{custno}, #{custname}, #{phone}, #{address}, #{joindate}, #{grade}, #{city})	
  </insert>

</mapper>
